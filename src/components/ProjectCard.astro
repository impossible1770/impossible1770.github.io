---
const { name, image, description, priority, stack } = Astro.props;
---

<div className="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]">
  <div className="hero-content flex-col md:flex-row">
    {image && <img src={image} alt={name} className="max-w-full md:max-w-[13rem] rounded-lg" />}
    <div className="grow w-full">
      <h1 className="text-xl font-bold">
        {name}
        {priority && <div className="badge badge-primary mx-2">{`Priority: ${priority}`}</div>}
      </h1>
      <p className="py-1 text-1xl">{description}</p>
      <div className="card-actions justify-end">
        {stack && stack.map((tag, index) => <div key={index} className="badge badge-outline">{tag}</div>)}
      </div>
    </div>
  </div>
</div>
